{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true
  },
  "mdx": {
    "checkMdx": true
  },
  "references": [
    {
      "path": "apps/host"
    },
    {
      "path": "apps/cloud"
    },
    {
      "path": "apps/ai"
    },
    {
      "path": "apps/mobile"
    },
    {
      "path": "apps/web"
    },
    {
      "path": "apps/sidepanel"
    }
  ]
}
